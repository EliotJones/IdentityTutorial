@model IdentityTutorial.Web.ViewModels.ErrorsViewModel

@if (Model.HasErrors)
{
    <div class="row" style="margin-bottom: 10px; margin-top: 10px;">
        <div class="col-md-12 bg-danger" style="padding: 5px;">
            @{ var errorStatus = Model.Errors.Count > 1 ? Model.Errors.Count + " errors occured" : "An error occured"; }
            <h3>@errorStatus</h3>
            <ul>
                @for (int i = 0; i < Model.Errors.Count; i++)
                {
                    <li>@Html.DisplayFor(m => m.Errors[i])</li>
                }
            </ul>
        </div>
    </div>
}